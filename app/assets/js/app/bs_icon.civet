// Bootstrap Icons for hyperapp

* as svg from @hyperapp/svg

interface BsIconProps
  name: string
  size?: number
  alt?: string
  class?: string[]

export default bsIcon := ({name, size = 24, alt, class: klass}: BsIconProps) ->
  svg_props := {}
    class: ["bi", ...(klass ?? [])]
    width: size
    height: size
    fill: "currentColor"
    ...(if alt? then {role: "img", aria-label: alt} else {})

  svg.svg svg_props,
    svg.use {href: `/assets/vendor/bootstrap-icons.svg#${name}`}
