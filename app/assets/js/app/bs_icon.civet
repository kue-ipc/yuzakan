// Bootstrap Icon app

{type ClassProp} from hyperapp
* as svg from @hyperapp/svg

// Hyperapp Views

export default bsIcon := ({
  name:: string
  size?:: number = 24
  alt?:: string
  class: klass?:: ClassProp
}) ->
  svg_props := {}
    class: ["bi", klass]
    width: size
    height: size
    fill: "currentColor"
    ...(if alt? then {role: "img", aria-label: alt} else {})

  svg.svg svg_props,
    svg.use {href: `/assets/bootstrap-icons.svg#${name}`}
