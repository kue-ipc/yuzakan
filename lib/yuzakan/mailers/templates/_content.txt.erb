<% if defined? by_user -%>
  <%- case by_user -%>
  <%- when :admin -%>
実施者: 管理者
  <%- when :system -%>
実施者: システム
  <%- end -%>
<%- end -%>
<% if defined? systems -%>
システム: <%= systems.map(&:display_name).join('、') %>
<%- else -%>
システム: <%= config.title %>
<%- end -%>
ユーザー: <%= user.name %>
実施日時: <%= Time.now %>
処理内容: <%= action %>
