{assert} from chai

{
  capitalize, camelize, pascalize, snakize, kebabize, pluralize, singularize,
} from ../../app/assets/js/helpers/str_helper.civet

describe "simple word", ->
  str := "abcdefghi"
  it "captialize", ->
    assert.equal capitalize(str), "Abcdefghi"

  it "camelize", ->
    assert.equal camelize(str), "abcdefghi"

  it "pascalize", ->
    assert.equal pascalize(str), "Abcdefghi"

  it "snakize", ->
    assert.equal snakize(str), "abcdefghi"

  it "kebabize", ->
    assert.equal kebabize(str), "abcdefghi"

describe "multiple words", ->
  str := "abc def ghi"
  it "captialize", ->
    assert.equal capitalize(str), "Abc def ghi"
  it "camelize", ->
    assert.equal camelize(str), "abcDefGhi"
  it "pascalize", ->
    assert.equal pascalize(str), "AbcDefGhi"
  it "snakize", ->
    assert.equal snakize(str), "abc_def_ghi"
  it "kebabize", ->
    assert.equal kebabize(str), "abc-def-ghi"

describe "all caps word", ->
  str := "ABCDEFGHI"
  it "captialize", ->
    assert.equal capitalize(str), "Abcdefghi"
  it "camelize", ->
    assert.equal camelize(str), "Abcdefghi"
  it "pascalize", ->
    assert.equal pascalize(str), "Abcdefghi"
  it "snakize", ->
    assert.equal snakize(str), "_abcdefghi"
  it "kebabize", ->
    assert.equal kebabize(str), "-abcdefghi"

